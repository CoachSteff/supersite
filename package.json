{
  "name": "supersite",
  "version": "0.2.0",
  "description": "A universal AI-powered website template built with Next.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/coachsteff/supersite.git"
  },
  "bugs": {
    "url": "https://github.com/coachsteff/supersite/issues"
  },
  "homepage": "https://github.com/coachsteff/supersite#readme",
  "keywords": [
    "nextjs",
    "ai",
    "chatbot",
    "template",
    "cms",
    "markdown",
    "typescript",
    "yaml-config"
  ],
  "author": "Supersite Contributors",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:stop": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "dev:restart": "npm run dev:stop && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "npm run setup:config && npm run setup:content",
    "setup:config": "node scripts/setup-config.js",
    "setup:content": "node scripts/setup-content.js",
    "setup:theme": "node scripts/setup-theme.js",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:ci && npm run test:e2e"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@types/js-yaml": "^4.0.9",
    "flexsearch": "^0.7.43",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "next": "^14.2.0",
    "nodemailer": "^8.0.1",
    "ollama": "^0.6.3",
    "openai": "^6.15.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "uuid": "^13.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.25",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
